{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "ng-element": ["packages/ng-element/src/index.ts"],
      "ng-features": ["packages/ng-features/src/index.ts"],
      "rc-features": ["packages/rc-features/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
